{
    "name": "phpgl/visu",
    "description": "A Modern OpenGL Framework for PHP, ex php-game-framework.",
    "license": "MIT",
    "require": {
        "php": ">=8.1",
        "clancats/container": "^1.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phpstan/phpstan": "^1.6",
        "phpgl/ide-stubs": "dev-main",
    },
    "autoload": {
        "psr-4": {
            "VISU\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "VISU\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "ClanCats\\Container\\ComposerContainerFileLoader::generateMap"
        ]
    },
    "extra": {
        "container": {
            "@main": "visu.ctn"
        }
    }
}
